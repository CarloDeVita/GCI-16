<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gci16.mobile.controllers.LoginController">

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:enabled="false"
        android:text="login" />

    <EditText
        android:id="@+id/operator_id_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:ems="10"
        android:hint="Operator ID"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/operator_password_edit_text"
        android:layout_alignStart="@+id/operator_password_edit_text" />

    <EditText
        android:id="@+id/operator_password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/operator_id_edit_text"
        android:layout_centerHorizontal="true" />
</android.widget.RelativeLayout>
